# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
 GET     /gytsyWinner                               Application.gutsyGuyWinner

GET     /youthRevolution                                  YouthRevolution.youthRevolution
GET     /nextOldPostsYouth                              YouthRevolution.nextOldPosts
POST     /writeNewYouth                              YouthRevolution.writeNew
GET     /previousYouth                                    YouthRevolution.previousOldPosts

GET     /talkFight                                 TalkFight.talkFight


GET     /sadstory                                  SadStory.sadStory
GET     /nextOldPostsSad                              SadStory.nextOldPosts
POST     /writeNewSadStory                          SadStory.writeNew
GET     /previousSad                                    SadStory.previousOldPosts
 
 GET     /firstCrush                                  FirstCrush.firstCrush
GET     /nextOldPostsCrush                              FirstCrush.nextOldPosts
POST     /writeNewCrush                                   FirstCrush.writeNew
GET     /previousCrush                                    FirstCrush.previousOldPosts


 GET     /gutsyPolls                                   GutsyPolls.gutsyPolls
 
 GET     /contact                                   Contact.contact

 



# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
